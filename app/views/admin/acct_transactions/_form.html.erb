<!-- Dynamically generated partial for AcctTransaction model forms-->

<main>
<div class="panel" style="margin: 10px; padding: 20px;">  

  <%= bootstrap_nested_form_for(@acct_transaction) do |f| %>
  <% if @acct_transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@acct_transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @acct_transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>
        <!-- pre-filled (static) fields -->
        
        
                <div class="row">
          <div class="col-md-6">
        <%= f.select :transaction_type_id, TransactionType.all.collect {|p| [ p.name, p.id ] }, 
        class: "selectpicker btn-lg btn-default",prompt: 'Select Transaction type' %>
          </div>
          <div class="col-md-6">
            
              <div class="form-group">
                    
                    <%= f.text_field :date, class: "form-control", id:'datetimepicker3'  %>
                  
              </div>
           </div>
           <script type="text/javascript">
            $(function () {
                $('#datetimepicker3').datetimepicker();
            });
        </script>
        </div>
        <!-- fields for AcctTransaction object -->
        <%= f.text_field :description, :style =>"max-width: 550px;" %>
        <div class="row">
          <div class="col-md-6">
            <%= f.text_field :account_id, required: true %>
          </div>
          <div class="col-md-6">
            <%= f.text_field :amount, required: true %>
          </div>
        </div>
        <%= f.text_field :payee_id, :value => params[:payee_id], required: true %> 
      <div class="actions">
        <%= f.submit "Complete Transaction", :class => "btn btn-info"%>
      </div>
    <% end %>
  </div>
</main>
